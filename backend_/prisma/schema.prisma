// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id            Int      @id @default(autoincrement())
  ydfID         String
  notes         String
  Name          String
  FatherName    String
  MotherName    String
  Address       String
  DOB           DateTime
  gender        Gender
  Doctor        String
  Hospital      String
  hba1c         HBA1C[]
  insulinType   String
  insulin       Insulin[]    @relation("insulin")
  stripType     String
  strips        Strip[]      @relation("strips")
  syringeType   String
  syringes      Syringe[]    @relation("syringe")
}

model HBA1C {
  id             Int         @id @default(autoincrement())
  student        Student?    @relation(fields: [studentId], references: [id])
  studentId      Int
  value          Decimal    @db.Decimal(10, 2)
  date           DateTime
}

model Insulin {
  id             Int         @id @default(autoincrement())
  student        Student?    @relation("insulin", fields: [studentId], references: [id])
  studentId      Int
  value          Int
  date           DateTime
}

model Strip {
  id             Int         @id @default(autoincrement())
  student        Student?    @relation("strips", fields: [studentId], references: [id])
  studentId      Int
  value          Int
  date           DateTime
}

model Syringe {
  id             Int         @id @default(autoincrement())
  student        Student?    @relation("syringe", fields: [studentId], references: [id])
  studentId      Int
  value          Int
  date           DateTime
}

enum Gender {
  MALE
  FEMALE
  OTHER
}